
<script src="js/profile.js" type="module"></script>
<title>Academic Writing - Profile</title>

{{> user-header}}


{{#if updated}}
  <div class='alert alert-success alert-dismissible fade show' id="alert" role='alert'>
    <strong>Congratulations! You have updated your profile!</strong>
    <strong>{{updated}}</strong>
    <button
      type='button'
      class='btn-close'
      data-bs-dismiss='alert'
      aria-label='Close'
    ></button>
  </div>
{{/if}}


<section class="container container-res mh">
  <div class="h4 py-4">Account Details</div>
  <div class="row">
    <div class="col-lg-8">

      <div class="card mb-5 py-4 py-lg-5 px-sm-4 px-lg-5 round">

        <div class="card-header text-center h4">Change Profile Details</div>
        <hr class="mb-0" />
        <div class="card-body">
          {{!-- <form class="mx-600 mx-auto" 
          name="profileForm" action="/profile" method="POST"> --}}
          <form class="mx-600 mx-auto" 
          name="profileForm"
          action="/profile"
          method="POST"
          >
            <div class="form-label-group">
              <label
                class="h5 normal-weight text-muted mt-3"
                for="inputFirstName"
              >First Name</label>
              <input
                class="form-control fc-black"
                id="inputFirstName"
                name="inputFirstName"
                type="text"
                placeholder="Enter your First name"
                value='{{firstName}}'
              />
            </div>

            <div class="form-label-group">
              <label
                class="h5 normal-weight text-muted mt-3"
                for="inputLastName"
              >Last Name</label>
              <input
                class="form-control fc-black"
                id="inputLastName"
                name="inputLastName"
                type="text"
                placeholder="Enter your Last name"
                value="{{lastName}}"
              />
            </div>
            <div class="form-label-group">
              <label
                class="h5 normal-weight text-muted mt-3"
                for="inputCountry"
              >Country</label>
              <input
                class="form-control fc-black"
                id="inputCountry"
                name="inputCountry"
                type="text"
                placeholder="Enter your country"
                value="{{country}}"
              />
            </div>

            <div class="form-label-group">
              <label
                class="h5 normal-weight text-muted mt-3"
                for="inputCity"
              >City</label>
              <input
                class="form-control fc-black"
                id="inputCity"
                name="inputCity"
                type="text"
                placeholder="Enter your city"
                value="{{city}}"
              />
            </div>

            <div class="form-label-group">
              <label
                class="h5 normal-weight text-muted mt-3"
                for="inputPhone"
              >Phone number</label>
              <input
                class="form-control fc-black"
                id="inputPhone"
                name="inputPhone"
                type="tel"
                placeholder="Enter your phone number"
                value="{{phoneNumber}}"
              />
            </div>

            <div class="form-label-group">
              <button
                id="saveChanges"
                {{!-- class="btn bg-orange text-white enjoy-button w-100 mt-5 height-50 disabled" --}}
                class="btn bg-orange text-white enjoy-button w-100 mt-5 height-50 disabled"
                type="submit"
                {{!-- type="button" --}}
                {{! style="display: none;" }}
              >Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
