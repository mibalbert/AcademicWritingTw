<script
  src="https://unpkg.com/libphonenumber-js/bundle/libphonenumber-js.min.js"
></script>
<script src="../js/adminJS/admin-edit-user-id.js" type="module"></script>

{{#if success}}
  <div
    id="alert-border-3"
    class="top-0 max-w-4xl mx-auto flex p-4 mb-4 rounded-xl text-green-800 border-t-4 border-green-300 bg-green-500 dark:text-green-400 dark:border-green-800"
    role="alert"
  >
    <svg
      class="flex-shrink-0 w-5 h-5"
      fill="currentColor"
      viewBox="0 0 20 20"
      xmlns="http://www.w3.org/2000/svg"
    ><path
        fill-rule="evenodd"
        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
        clip-rule="evenodd"
      ></path></svg>
    <div class="ml-3 text-sm font-medium">
      {{success}}
    </div>
    <button
      type="button"
      class="ml-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700"
      data-dismiss-target="#alert-border-3"
      aria-label="Close"
    >
      <span class="sr-only">Dismiss</span>
      <svg
        aria-hidden="true"
        class="w-5 h-5"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
      ><path
          fill-rule="evenodd"
          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
          clip-rule="evenodd"
        ></path></svg>
    </button>
  </div>
{{/if}}

<div class="w-full h-auto md:px-10 bg-gray-800">

  <div
    class="block mb-5 p-6 w-auto border rounded-lg shadow-lg bg-gray-800 border-gray-600"
  >
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-white">Edit User with
      ID:
      {{#if user.id}}{{user.id}}{{/if}}
    </h5>
    <p class="font-normal text-gray-400">Here are all the orders that have been
      placed on the website.
      <br />
      From
    </p>
  </div>

  <nav
    class="text-sm font-medium text-gray-500 mb-5 ml-2"
    aria-label="Breadcrumb"
  >
    <ol class="list-none p-0 inline-flex">

      <li class="flex items-center">
        <a
          href="/admin-edit-users"
          class="text-sky-600 hover:text-sky-700"
        >Users</a>
      </li>
      <div class="px-3">/</div>
      <li class="flex items-center">
        <span class="text-gray-700">User Id: {{user.id}}</span>
      </li>
    </ol>
  </nav>

  <div
    class="max-w-2xl mx-auto rounded-xl shadow-xl border border-gray-600 p-10"
  >

    {{#if user}}
      <form
        id="edit-user-form"
        action="/admin-edit-users/{{user.id}}"
        method="POST"
      >
        <div class="mb-6">
          <label
            for="email"
            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Email address</label>
          <input
            type="email"
            id="email"
            value="{{user.user_email}}"
            class="disabled bg-gray-50 border border-gray-400 text-gray-300 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500"
            disabled
          />
        </div>
        <div class="mb-6">
          <label
            for="email"
            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Password</label>
          <input
            type="password"
            id="pass"
            name="pass"
            value="{{user.pass}}"
            class="bg-gray-50 border border-gray-400 text-gray-300 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500"
            required
          />
        </div>

        <div class="grid gap-6 mb-6 md:grid-cols-2">

          <div>
            <label
              for="first_name"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >First name</label>
            <input
              type="text"
              name="user_first_name"
              id="first_name"
              value="{{user.user_first_name}}"
              class="bg-gray-50 border border-gray-400 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="John"
              required
            />
          </div>
          <div>
            <label
              for="last_name"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Last name</label>
            <input
              type="text"
              name="user_last_name"
              id="last_name"
              value="{{user.user_last_name}}"
              class="bg-gray-50 border border-gray-400 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="Doe"
              required
            />
          </div>
          <div>
            <label
              for="last_name"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Country</label>
            <input
              type="text"
              name="user_country"
              id="user_country"
              value="{{user.user_country}}"
              class="bg-gray-50 border border-gray-400 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="United Kingdom"
              required
            />
          </div>
          <div>
            <label
              for="last_name"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >City</label>
            <input
              type="text"
              name="user_city"
              id="user_city"
              value="{{user.user_city}}"
              class="bg-gray-50 border border-gray-400 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="London"
              required
            />
          </div>

          <div>
            <label
              for="phone"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Phone number</label>
            <input
              type="tel"
              id="phone"
              name="user_telephone"
              value="{{user.user_telephone}}"
              class="bg-gray-50 border border-gray-400 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="123-45-678"
              required
            />
          </div>

        </div>

        <textarea
          name="comments"
          class="max-h-[12rem] bg-gray-50 border border-gray-400 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        >{{user.comments}}</textarea>

        <div class="flex items-start mb-6 mt-6">
          <div class="flex items-center h-5">
            {{!-- <input
              id="remember"
              type="checkbox"
              name="subscribed"
              value="{{user.subscribed}}"
              class="w-4 h-4 border border-gray-400 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800"
              required
            /> --}}
            {{#if subscribed}}
              <input
                type="checkbox"
                name="subscribed"
                id="subscribed"
                checked
              />
            {{else}}
              <input
                type="checkbox"
                name="subscribed"
                id="subscribed"
                unchecked
              />
            {{/if}}
          </div>
          <label
            for="remember"
            class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300"
          >The user agrees with beeing subscribed to the newsletter and agrees
            with the
            <a
              href="#"
              class="text-blue-600 hover:underline dark:text-blue-500"
            >terms and conditions</a>.</label>
        </div>
        <button
          type="submit"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >Submit</button>
      </form>

      {{#ifEquals user.status "active"}}
        <form>
          <button
            type="submit"
            class="text-white bg-red-800 hover:bg-red-900 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-500 dark:focus:ring-blue-800"
          >Disable Account</button>
        </form>
      {{else}}
        <form>
          <button
            type="submit"
            class="text-white bg-green-800 hover:bg-green-900 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-green-600 dark:hover:bg-green-500 dark:focus:ring-blue-800"
          >Enable Account</button>
        </form>
      {{/ifEquals}}

    {{/if}}

  </div>
</div>